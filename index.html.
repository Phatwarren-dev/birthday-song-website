  <!-- EmailJS SDK -->
  <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/@emailjs/browser@4/dist/email.min.js"></script>
  
  <script>
    // Initialize EmailJS
    emailjs.init("nD3vb8Aa24yTu0DAz");
    
    const fields = ["customer-email", "customer-name", "name", "age", "pronouns", "traits", "genre", "special-requests", "deadline"];
    
    fields.forEach(field => {
      const element = document.getElementById(field);
      element.addEventListener("input", () => {
        const value = element.value || "â€”";
        const previewElement = document.getElementById(`preview-${field}`);
        if (previewElement) {
          previewElement.textContent = value;
        }
      });
    });

    function generateSong() {
      // Get form values
      const customerEmail = document.getElementById("customer-email").value.trim();
      const customerName = document.getElementById("customer-name").value.trim();
      const name = document.getElementById("name").value.trim();
      const age = document.getElementById("age").value;
      const pronouns = document.getElementById("pronouns").value.trim();
      const traits = document.getElementById("traits").value.trim();
      const genre = document.getElementById("genre").value.trim();
      const specialRequests = document.getElementById("special-requests").value.trim();
      const deadline = document.getElementById("deadline").value;

      // Validate required fields
      if (!customerEmail) {
        showError("Please enter your email address");
        return;
      }
      
      if (!name) {
        showError("Please enter the recipient's name");
        return;
      }

      // Disable button and show loading
      const btn = document.getElementById("generate-btn");
      btn.disabled = true;
      btn.textContent = "ðŸŽµ Sending Request...";

      // Prepare email data for EmailJS
      const emailData = {
        customer_email: customerEmail,
        customer_name: customerName || "Not provided",
        recipient_name: name,
        recipient_age: age || "Not provided",
        pronouns: pronouns || "Not provided",
        traits: traits || "Not provided",
        genre: genre || "Not provided",
        special_requests: specialRequests || "None",
        deadline: deadline || "No deadline specified",
        timestamp: new Date().toLocaleString()
      };

      // Send email via EmailJS
      sendEmailViaService(emailData)
        .then(() => {
          showSuccess("Request sent successfully! We'll be in touch soon.");
          clearForm();
        })
        .catch((error) => {
          console.error('EmailJS error:', error);
          showError("Failed to send request. Please try again or contact us directly.");
        })
        .finally(() => {
          // Re-enable button
          btn.disabled = false;
          btn.textContent = "ðŸŽ¤ Generate Song";
        });
    }

    // EmailJS function
    function sendEmailViaService(data) {
      return emailjs.send(
        "service_xopurjr",    // Your EmailJS service ID
        "template_cxwfx9a",   // Your EmailJS template ID
        data
      );
    }

    function showSuccess(message) {
      const successDiv = document.getElementById("success-msg");
      const errorDiv = document.getElementById("error-msg");
      errorDiv.style.display = "none";
      successDiv.textContent = message;
      successDiv.style.display = "block";
    }

    function showError(message) {
      const errorDiv = document.getElementById("error-msg");
      const successDiv = document.getElementById("success-msg");
      successDiv.style.display = "none";
      errorDiv.textContent = message;
      errorDiv.style.display = "block";
    }

    function clearForm() {
      fields.forEach(field => {
        const element = document.getElementById(field);
        if (element) {
          element.value = "";
          const previewElement = document.getElementById(`preview-${field}`);
          if (previewElement) {
            previewElement.textContent = "â€”";
          }
        }
      });
      document.getElementById("song-output").textContent = "";
    }
  </script>
